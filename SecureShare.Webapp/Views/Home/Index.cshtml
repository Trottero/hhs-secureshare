<link rel="stylesheet" href="~/css/home.css" />
<link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">


<div class="overflow-hidden p-3 p-md-5  text-center" style="background:linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.4)), url(/images/pexels-photo.jpeg); background-size: 100% 100% ; background-repeat:no-repeat;">

    <div class="col-md-5 p-lg-5 mx-auto my-5">
        <img class="logo img-responsive" src="~/images/SecureShareLogo2.png" />
        <h1 class="Subtitle mb-3 display-6 font-weight-normal">Safest way to save and share your files</h1>

        <form asp-page="/Account/ExternalLogin" asp-route-returnUrl="/Home/Index" asp-route-provider="Microsoft" method="post">
