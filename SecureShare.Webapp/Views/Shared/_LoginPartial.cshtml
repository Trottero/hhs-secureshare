@if (User.Identity.IsAuthenticated)
{
    <span class="navbar-text">
        <a asp-page="/Account/Manage/Index" title="Manage">@User.Identity.Name</a>
        <a asp-area="" asp-controller="Account" asp-action="Logout">sign out</a>
    </span>
}
else
{
    <form asp-page="/Account/ExternalLogin" asp-route-returnUrl="giel" method="post" class="form-horizontal">
        <button type="submit" class="btn btn-default" name="provider" value="Microsoft" title="Log in using your Microsoft account">Microsoft</button>
    </form>
}