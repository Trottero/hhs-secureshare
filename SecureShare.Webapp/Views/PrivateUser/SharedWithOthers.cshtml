@model IEnumerable<SecureShare.WebApi.Wrapper.Models.UserFile>
@{
    Layout = "_DashboardLayout";
}


<h2>My files</h2>
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
        <tr>
            <th>#</th>
            <th>File name</th>
            <th>Description</th>
            <th>Uploaded</th>
            <th>Download</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var file in Model)
        {
            <tr>
                <td>@file.UserFileId</td>
                <td>@file.FileName</td>
                <td>@file.Description</td>
                <td>@file.UploadDateTime</td>
                <td>
                    <a asp-controller="PrivateUser" asp-action="DownloadFile" asp-route-id="@file.UserFileId">Download</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>