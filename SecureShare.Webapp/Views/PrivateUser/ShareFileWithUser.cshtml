@model SecureShare.Webapp.Models.ShareFileViewModel
<link rel="stylesheet" href="~/css/dashboard.css"/>


<div class="container-fluid">
    <div class="row">
        @await Html.PartialAsync("_SidebarPartial")
        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
            <form enctype="multipart/form-data" asp-controller="PrivateUser" asp-action="ShareFileWithUser" method="post" >
                <div class="form-group">
                    <div class="col-md-10">

                        Share file: @Model.Filename with another user
                        <input asp-for="Filename">
                        <input asp-for="UserToShareWith"/>
                        <input asp-for="FileToShare">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <input  type="submit" value="Share!"/>
                    </div>
                </div>
            </form>
        </main>
    </div>
</div>