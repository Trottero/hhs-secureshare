@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/Settings.css" />

<div class="container-fluid">
    <div class="row">
        @await Html.PartialAsync("_SideNav")
        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
            <div class="row text-center d-block" style="filter: grayscale(80%); align-items:center; background-image:url(/images/header.png); background-size: 100% 100%; height:32%;">

                <div><h1 style="text-shadow: 1px 1px 3px #000000;"><b>Manage your account</b></h1></div>
                <div><h4>Change your account settings</h4></div>
            </div>

            <div>

                <hr />
                <div class="row">
                        <div class="col-md-10">
                        @RenderBody()
                    </div>
                </div>
            </div>

            @section Scripts {
            @RenderSection("Scripts", required: false)
            }

        </main>
    </div></div>