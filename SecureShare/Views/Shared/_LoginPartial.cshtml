@if (User.Identity.IsAuthenticated)
{
    <div class="dropdown show">
        <a class="btn btn-light dropdown-toggle" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            @User.Identity.Name
        </a>

        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
            <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="SignOut">sign out</a>
        </div>
    </div>
}
else
{
    <span class="navbar-text">    <a asp-area="" asp-controller="Account" asp-action="Signin">Sign in</a></span>

}