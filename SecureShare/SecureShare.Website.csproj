  <ItemGroup>
    <Content Remove="Views\Home\Index.cshtml" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Webcam_Plugin\jquery.webcam.js" />
    <None Remove="Webcam_Plugin\jscam.swf" />
